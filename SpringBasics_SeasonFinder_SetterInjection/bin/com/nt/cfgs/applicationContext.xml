<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">

     <!-- Spring bean configuration file using the static method -->
     <bean id="ld" class="java.time.LocalDate" factory-method="now"/>
     
     <!-- Scanning the java class and finding @Component -->
     <context:component-scan base-package="com.nt.sbeans"/>

</beans>
